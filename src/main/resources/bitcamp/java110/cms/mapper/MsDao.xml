<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.java110.cms.dao.MsDao">

	<resultMap type="ms" id="msMap">
		<id column="no" property="no" />
		<result column="name" property="name" />
		<result column="type" property="type" />
		<result column="cont" property="cont" />
		<result column="phot" property="phot" />
	</resultMap>
    
    <insert id="insert" parameterType="ms">
        insert into ms_board(name,type,cont,phot) 
        values(#{name},#{type},#{cont},#{phot})
    </insert> 
    
    <select id="viewlist" resultMap="msMap" parameterType="map">
     select no,
            name,
            type,
            cont,
            phot
      from ms_board
    </select>
    
    <select id ="findByNo" resultMap="msMap" parameterType="int">
      select no,
            name,
            type,
            cont,
            phot
      from ms_board
      where no = #{value}
    
    </select>
    
    <delete id="delete" parameterType="int">
     delete from ms_board
     where no = #{value}
    </delete>
    
    <update id="update" parameterType="ms">
       update ms_board
        set name = #{name},
            type = #{type},
            cont = #{cont},
            phot = #{phot}
        where no = #{no}
    </update>
    
</mapper>
