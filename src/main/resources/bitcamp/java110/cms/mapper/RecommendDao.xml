<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.java110.cms.dao.RecommendDao">
    
    <select id="findMgrRcmdList" resultType="list" parameterType="thmno">
        SELECT thm.thm, mv.mvno, mv.titl
            FROM mv_rcmd rcmd
        INNER JOIN mv_mv mv
            ON rcmd.mvno = mv.mvno
        INNER JOIN mv_thm thm
            ON rcmd.thmno = thm.thmno
        WHERE thm.thmno = #{thmno}
    </select>
    
</mapper>







