<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.java110.cms.dao.flwDao">

	<resultMap type="flw" id="flwMap">
		<id column="mno" property="mno" />
		<result column="flw" property="flwno" />
	</resultMap>
    
    <insert id="insert" parameterType="flw">
        insert into ms_flw(mno,flw) 
        values(#{mno},#{flwno})
    </insert> 
    
    <select id="flwlist" resultMap="flwMap" parameterType="map">
     select mno,
            flw
     from mv_flw
    </select>
    
